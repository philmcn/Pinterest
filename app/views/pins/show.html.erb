

<div class="row">

	<div class="col-md-6">
		<div class="well">
			<% if !@pin.image.blank? %>
			<%= image_tag @pin.image, class: "img-responsive" %>
			<% end %>
			<% if !@pin.youtube_url.blank? %>
			<div style="text-align:center"><%= youtube_embed(@pin.youtube_url).html_safe %></div>
			<%end%>
			
			
			<p><h3><%= @pin.description %></h3></p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			
			
            <b>Rating:</b> <%= rating_for @pin, "rating" %>	
            <% if  !@pin.user.nil? %>
			<p>Uploaded By-<%= link_to @pin.user.name, @pin.user %></p>
			<%end%>
            <div >
	<fb:like href="http://hidden-chamber-6590.herokuapp.com/pins/<%= @pin.id %>" send="false" layout="button_count" show_faces="false"></fb:like>
	<div style="float:right;">
	<div class="fb-share-button" data-href="http://hidden-chamber-6590.herokuapp.com/pins/<%= @pin.id %>" data-type="button">
	</div>
</div>
</div>		
		</div>
	</div>

	<div class="col-md-6">
		<div class="well">
			<%#= render_comments_form @pin %>
			<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="fb-comments" data-href="http://funnyfakeads.com/pins/<%= @pin.id %>comments" data-numposts="5"></div>
		</div>
		<%#= render_comments @pin %>
	</div>

</div>



