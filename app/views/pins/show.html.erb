

<div class="row">

	<div class="col-md-6">
		<div class="well" style="width:200%">
			<% if !@pin.image.blank? %>
			<%= image_tag @pin.image, class: "img-responsive" %>
			<% end %>
			<% if !@pin.youtube_url.blank? %>
			<div style="text-align:center"><%= youtube_embed(@pin.youtube_url).html_safe %></div>
			<%end%>

			<% if !@pin.brand.blank?%>
				<p class="brand"><strong>Brand:</strong> <%= @pin.brand %></p>
			<%end%>
		
			<p><h3><%= @pin.description %></h3></p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			
			
            <b>Rating:</b> <%= rating_for @pin, "rating" %>	
            <% if  !@pin.user.nil? %>
			<p><strong>Uploaded By-</strong><%= link_to @pin.user.name, @pin.user %></p>
			<%end%>
          <div>
			<fb:like href="http://www.funnyfakeads.com/pins/<%= @pin.id %>" send="false" layout="button_count" show_faces="false"></fb:like>
			
			<div class="fb-share-button" data-href="http://www.funnyfakeads.com/pins/<%= @pin.id %>" data-type="button" style="margin-left: 411px;">
			</div>

			<div class="fb-comments" data-href="http://www.funnyfakeads.com/pins/<%= @pin.id %>" data-numposts="1" data-colorscheme="light"></div>	
        </div>	
		</div>
	</div>


	
</div>



